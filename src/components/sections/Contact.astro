---
import siteConfig from "@/siteConfig.json";

// Button styles - matching CustomLink component
const buttonClasses = [
  // Base styling
  "flex items-center justify-center gap-2 rounded-3xl px-6 py-3 text-lg transition-colors w-full ring-2",
  
  // DaisyUI semantic colors
  "bg-base-100 text-base-content ring-base-300",
  "hover:bg-base-200 hover:ring-base-content/20"
].join(" ");

// Input field styles
const inputClasses = [
  // Base styling
  "w-full px-4 py-3 rounded-3xl outline-none focus:ring-4 transition-colors border",
  
  // DaisyUI semantic colors
  "bg-base-100 text-base-content border-base-300",
  "placeholder:text-base-content/60",
  "focus:border-base-300/70 focus:ring-base-300/70"
].join(" ");

// Error message styles
const errorClasses = "text-error text-sm mt-1";
---

<h2 class="pt-8 sm:pt-12 pb-8 text-3xl font-semibold text-center text-base-content">Contact</h2>
<form
  action="https://api.web3forms.com/submit"
  method="POST"
  id="form" 
  class="needs-validation"
  data-astro-reload
  novalidate>
  
  <!-- Web3Forms Access Key from siteConfig.json -->
  <input type="hidden" name="access_key" value={siteConfig.web3FormsAccessKey} />
  
  <input type="checkbox" class="hidden" style="display:none" name="botcheck" />
  <div class="mb-5">
    <input
      type="text"
      placeholder="Full Name"
      required
      class={inputClasses}
      name="name"
    />
    <div class={`empty-feedback invalid-feedback ${errorClasses}`}>
      Please provide your full name.
    </div>
  </div>
  <div class="mb-5">
    <label for="email_address" class="sr-only">Email Address</label><input
      id="email_address"
      type="email"
      placeholder="Email Address"
      name="email"
      required
      class={inputClasses}
    />
    <div class={`empty-feedback ${errorClasses}`}>
      Please provide your email address.
    </div>
    <div class={`invalid-feedback ${errorClasses}`}>
      Please provide a valid email address.
    </div>
  </div>
  <div class="mb-3">
    <textarea
      name="message"
      required
      placeholder="Your Message"
      class={`${inputClasses} h-36`}
    ></textarea>
    <div class={`empty-feedback invalid-feedback ${errorClasses}`}>
      Please enter your message.
    </div>
  </div>
  <button 
    type="submit"
    class={buttonClasses}
  >
    Send Message
  </button>
  <div id="result" class="mt-3 text-center"></div>
</form>

<style>
  .invalid-feedback,
  .empty-feedback {
    display: none;
  }

  .was-validated :placeholder-shown:invalid ~ .empty-feedback {
    display: block;
  }

  .was-validated :not(:placeholder-shown):invalid ~ .invalid-feedback {
    display: block;
  }

  .is-invalid,
  .was-validated :invalid {
    border-color: oklch(var(--color-error));
  }
</style>

<script>
  import { initializeContactForm } from "@/lib/contactFormHandler";

  // Initialize when DOM is ready
  // Use astro:page-load event if you are using View Transitions
  document.addEventListener("DOMContentLoaded", () => {
    initializeContactForm();
  }, { once: true });
</script>