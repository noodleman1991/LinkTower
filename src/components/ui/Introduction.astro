---
import { Image } from "astro:assets";

import { SITE } from "@/siteConfig";
---

<div class="mt-8 py-4">
  <Image
    src={SITE.profilePicture}
    alt={SITE.name}
    height={256}
    width={256}
    loading="eager"
    draggable="false"
    class="mx-auto size-32 rounded-full"
  />
  <h1 class="mt-4 text-center text-3xl font-semibold">{SITE.name}</h1>
  <p
    class="text-md text-lightModeForegroundMuted dark:text-darkModeForegroundMuted mt-1 text-balance text-center"
  >
    {SITE.bio}
  </p>
</div>
