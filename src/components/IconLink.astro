---
import { Icon } from "astro-icon/components";

const { icon, url } = Astro.props;

---

<li>
  <a
    href={url}
    aria-label={icon}
    class="group block rounded-full p-3 ring-2 transition-colors bg-base-100 ring-base-300 hover:bg-base-200 hover:ring-base-content/20"
  >
    <Icon
      name={icon}
      class="size-6 transition-colors text-base-content/70 group-hover:text-base-content"
    />
  </a>
</li>
